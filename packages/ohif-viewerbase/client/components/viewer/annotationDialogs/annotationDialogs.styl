@import "{ohif:design}/app"

.annotationDialog
  theme('border', '1px solid $uiBorderColor', 0.95)
  theme('background', '$uiGrayDarkest', 0.95)
  theme('color', '$textSecondaryColor')
  z-index: 1000
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  margin: auto
  overflow: hidden
  padding: 10px
  width: 300px
  height: 140px
  border-radius: 8px

  h5, label
    font-weight: 400

  .annotationTextInputOptions
    padding: 10px 0

  .annotationTextInput
    margin-left: 5px

  .annotationDialogConfirm
    float: right
