@import "{ohif:design}/app"

.settingEntryDialog
  theme('border', '1px solid $uiBorderColor', 0.95)
  theme('background', '$uiGrayDarkest', 0.95)
  theme('color', '$textSecondaryColor')
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 100
  width: 300px
  height: 200px
  margin: auto
  padding: 10px
  outline: none
  border-radius: 8px

  .dialogContent
    text-align: center
    margin-bottom: 10px

    .row
      margin: 15px 0

  .btn
    text-decoration: none

  #cancel
    float: left

  #save
    float: right

  input.currentValue
    width: 95%
    text-align: center
    padding: 4px
    color: black
    height: 30px
    border-radius: 2px
    border: 0
