.layout-container
    align-items: stretch
    display: flex
    flex-flow: column nowrap
    height: 100vh

    .layout-header
        background-color: cyan
        flex-grow: 0

    .layout-body
        align-items: stretch
        display: flex
        flex-grow: 1

.layout-sidebar
    background-color: lime
    flex-grow: 0

.layout-main
    background-color: white
    flex-grow: 1

.toolbar-drawer
    overflow: hidden
    transition: max-height 0.3s ease

    &:not(.open)
        max-height: 0 !important

.layout-sidebar-left
.layout-sidebar-right
    overflow: hidden
    transition: max-width 0.3s ease

    &:not(.open)
        max-width: 0 !important
