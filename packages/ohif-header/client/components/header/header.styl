@import "{ohif:design}/app"

body>.header
  height: $topBarHeight
  padding: 10px 10px 0
  theme('color', '$textPrimaryColor')
  theme('background-color', '#800000')
  transition(all 0.5s ease)    

  .navbar-brand
    padding: 0px 15px
    height: 95px

  .navbar-form
    margin-top: 15px

  &>.clearfix
    position: relative

  .header-menu
    padding: 25px 0
    font-size: 16px
    font-weight: 400
    line-height: 21px
    text-decoration: none
    theme('color', '$defaultColor')    

    &:empty
      display: none

  .header-menu-default
    padding: 25px 0
    font-size: 16px
    font-weight: 400
    line-height: 21px
    text-decoration: none
    color: #fff !important

    &:empty
      display: none
    
    &:hover
      color: #9d9d9d !important

    &:focus
      color: #9d9d9d !important    

  &.header-big
    _height: $topBarExpandedHeight
    _background-color: rgba(21, 25, 30, 0.7)
    margin-bottom: 0px
