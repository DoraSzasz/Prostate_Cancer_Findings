@import "{ohif:design}/app"

@keyframes zoomIn
    0%
        transform(scale(0))
    100%
        transform(scale(1))

@keyframes zoomOut
    0%
        transform(scale(1))
    100%
        transform(scale(0))

@keyframes slideInDown
    0%
        opacity: 0
        transform(translateY(-100%) scale(0))
    100%
        opacity: 1
        transform(translateY(0) scale(1))

@keyframes slideOutUp
    0%
        opacity: 1
        transform(translateY(0) scale(1))
    100%
        opacity: 0
        transform(translateY(-100%) scale(0))

@keyframes fadeIn
    from
        opacity: 0
        visibility: hidden
    to
        opacity: 1
        visibility: visible

@keyframes fadeOut
    from
        opacity: 1
        visibility: visible
    to
        opacity: 0
        visibility: hidden
